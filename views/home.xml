                            <!-- Course Details -->
                            <div class="card-body">
                                <h5 class="card-title">Course Title 3</h5>
                                <p class="card-text">Brief description of the course. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                                <a href="#" class="btn btn-primary">Learn More</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Why Choose Us Section -->
            <section class="my-5">
                <h2 class="text-center mb-4">Why Choose E-Courses?</h2>
                <div class="row">
                    <div class="col-md-4">
                        <h4>Expert Instructors</h4>
                        <p>Learn from industry experts with real-world experience.</p>
                    </div>
                    <div class="col-md-4">
                        <h4>Interactive Learning</h4>
                        <p>Engage in hands-on activities and interactive lessons.</p>
                    </div>
                    <div class="col-md-4">
                        <h4>Flexible Schedule</h4>
                        <p>Study at your own pace, anytime, anywhere.</p>
                    </div>
                </div>
            </section>

            <!-- Testimonials Section -->
            <section class="my-5">
                <h2 class="text-center mb-4">What Our Students Say</h2>
                <div id="carouselExample" class="carousel slide" data-ride="carousel">
                    <!-- Carousel Content Goes Here -->
                </div>
            </section>

            <!-- Call to Action Section -->
            <section class="text-center my-5">
                <h2>Start Your Learning Journey Today!</h2>
                <p>Explore our courses and unlock a world of knowledge.</p>
                <a href="#" class="btn btn-primary btn-lg">Get Started</a>
            </section>
        </div>

        <!-- Footer Section -->
        <footer class="bg-dark text-white py-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p>2023 E-Courses Platform. All rights reserved.</p>
