<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_elearning_action_form" model="ir.actions.act_window">
        <field name="name">E-Learning</field>
        <field name="res_model">e_learning.course</field>
        <field name="view_mode">tree,graph,form,search</field>
    </record>
    <menuitem id="elearning_menu" name="E-Learning"/>
    <menuitem id="e-learning_menu" name="e-learning" parent="elearning_menu" action="action_elearning_action_form"/>
    
   <record id="course_form_view" model="ir.ui.view">
        <field name="name">Course Form</field>
        <field name="model">e_learning.course</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="start_course" type="object" string="Start Course" class="oe_highlight"/>
                    <button name="complete_course" string="Complete Course" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="instructor_ids" widget="many2many_tags"/>
                            <field name="price"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="description"/>
                        </group>
                    </group>  
                </sheet>
            </form>
        </field>
    </record>


    <record id="course_tree_view" model="ir.ui.view">
        <field name="name">Course Tree</field>
        <field name="model">e_learning.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="instructor_ids" widget="many2many_tags"/>
                <field name="start_date"/>
            </tree>
        </field>
    </record>

    <record id="course_search_view" model="ir.ui.view">
        <field name="name">Course Search</field>
        <field name="model">e_learning.course</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="instructor_ids"/>
                <filter string="No Instructors"
                        name="without_instructor"
                        domain="[('instructor_ids','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="course_graph_view" model="ir.ui.view">
        <field name="name">Course Graph</field>
        <field name="model">e_learning.course</field>
        <field name="arch" type="xml">
            <graph string="Courses">
                <field name="name" type="row"/>
                <field name="start_date" type="measure"/>
            </graph>
        </field>
    </record>
</odoo>
