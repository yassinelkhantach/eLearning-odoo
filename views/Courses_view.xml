<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_elearning_action_form" model="ir.actions.act_window">
        <field name="name">Learning Overview</field>
        <field name="res_model">e_learning.course</field>
        <field name="view_mode">kanban,tree,graph,form,search</field>
    </record>
    <menuitem
        id="elearning_menu"
        name="E-Learning"/>
    <menuitem
        id="e-learning_menu"
        name="Courses"
        parent="elearning_menu"
        action="action_elearning_action_form"
        />

<record id="course_form_view" model="ir.ui.view">
    <field name="name">Course Form</field>
    <field name="model">e_learning.course</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button string="Start Course" type="object" name="start_course" class="oe_highlight"/>
                <button string="Complete Course" type="object" name="complete_course" class="oe_highlight"/>
                <field name="state" widget="statusbar"/>
            </header>
            <group>
                <div class="row">
                    <div class="col-md-8">
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="instructor_ids" widget="many2many_tags"/>
                            <field name="price"/>
                            <field name="tags" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="description"/>
                        </group>
                    </div>
                    <div class="col-md-4 d-flex align-items-center justify-content-center">
                        <div style="max-width: 200px; max-height: 200px;">
                            <field name="photo" widget="image" options="{'size': (200, 200)}" class="rounded-circle"/>
                        </div>
                    </div>
                </div>
            </group>
        </form>
    </field>
</record>

<record id="course_kanban_view" model="ir.ui.view">
    <field name="name">Course Kanban</field>
    <field name="model">e_learning.course</field>
    <field name="arch" type="xml">
        <kanban>
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_content">
                        <div class="oe_kanban_global_left">
                            <field name="name" class="oe_kanban_title"/>
                        </div>
                        <div class="oe_kanban_global_right">
                            <div class="oe_kanban_tags">
                                <field name="tags" widget="many2many_tags"/>
                            </div>
                            <field name="instructor_ids" widget="many2many_tags"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </div>
                    </div>
                </t>
            </templates>
            <groups>
                <group>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                </group>
            </groups>
        </kanban>
    </field>
</record>

    <record id="course_tree_view" model="ir.ui.view">
        <field name="name">Course Tree</field>
        <field name="model">e_learning.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="instructor_ids" widget="many2many_tags"/>
                <field name="start_date"/>
            </tree>
        </field>
    </record>

    <record id="course_search_view" model="ir.ui.view">
        <field name="name">Course Search</field>
        <field name="model">e_learning.course</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="instructor_ids"/>
                <filter string="No Instructors"
                        name="without_instructor"
                        domain="[('instructor_ids','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="course_graph_view" model="ir.ui.view">
        <field name="name">Course Graph</field>
        <field name="model">e_learning.course</field>
        <field name="arch" type="xml">
            <graph string="Courses">
                <field name="name" type="row"/>
                <field name="start_date" type="measure"/>
            </graph>
        </field>
    </record>
</odoo>
